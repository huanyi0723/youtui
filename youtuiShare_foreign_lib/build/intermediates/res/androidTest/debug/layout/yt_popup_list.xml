<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sharelist_selectplatform_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:text="@string/yt_share_to"
            android:textColor="#a6a6a6"
            android:textSize="14sp" 
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/yt_listpopup_screencap_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="@string/yt_screencap"
            android:textColor="#1ca3d2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_list_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sharelist_selectplatform_layout"
        android:background="#e1e1e1"
        android:orientation="horizontal" />

    <ListView
        android:id="@+id/sharelist_share_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_list_line"
        android:layout_above="@+id/sharelist_point_linelay"
        android:divider="#f5f5f5"
        android:dividerHeight="1dp"
        android:numColumns="1"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/sharelist_point_linelay"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sharelist_knowaction_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/yt_list_item_unselected_color_border"
            android:gravity="center"
            android:paddingTop="10dip"
            android:text="@string/yt_learn_points_activities"
            android:textColor="#9BC7E4"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Github/youtui/youtuiShare_foreign_lib/res/layout/yt_popup_list.xml --><!-- From: file:/D:/Github/youtui/youtuiShare_foreign_lib/build/intermediates/bundles/debug/res/layout/yt_popup_list.xml -->